<% if(locals.message) { %>
<p><%= message %></p>
<% } %>

<form method="POST" action"/login">

  <div class="field">
    <label class="title is-3">Email</label>
    <div class="control">
      <input class="input" name="email" type="text" placeholder="Email">
    </div>
  </div>
  <div class="field">
    <label class="title is-3">Password</label>
    <div class="control">
      <input class="input" name="password" type="password" placeholder="Password">
    </div>
  </div>
  <div class="control">
    <button class="button is-large">Login</button>
  </div>
</form>
